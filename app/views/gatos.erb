<h1>Nuestros gatos</h1>
<table class="table" id="gatos">
    <thead>
        <tr>
            <th class="columna_foto"></th>
            <th>Nombre</th>
            <th>Edad</th>
            <th>Sexo</th>
            <!-- No se ven si no está loggeado -->
            <th>Editar</th>
        </tr>
    </thead>
    <tbody>
        <% @gatos.each do |gato| %>
            <tr>
                <td class="columna_foto"><div class="fotolistado"><a href="/gatos/<%= gato.id %>"><img src="<%= gato.thumbnail %>"/></a></div></td>
                <td><h3><%= gato.nombre %></h3></td>
                <td><%= gato.texto_edad %></td>
                <td><%= gato.texto_sexo %></td>
                <!-- No se ven si no está loggeado -->
                <td><a href="/gatos/eliminar/<%= gato.id %>">Eliminar</a> | <a href="/gatos/modificar/<%= gato.id %>">Modificar</a></td>
            </tr>
        <% end %>
    </tbody>
</table>
<% content_for :javascript do %>
    <script src="js/jquery.dataTables.min.js"></script>
    <script>
    $(function() {
        $('#gatos').dataTable();
    });
    </script>
<% end %>

